<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.selfmade.gradiamut.myplan.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_recovery"
        android:layout_margin="50dp"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:id="@+id/forgotEmailField"
        android:ems="15"
        android:backgroundTint="@color/colorAccent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColorHint="@color/colorAccent"
        android:hint="@string/enter_your_e_mail_adrress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/btnForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/forgotEmailField"
        android:layout_alignLeft="@+id/forgotEmailField"
        android:layout_alignRight="@+id/forgotEmailField"
        android:layout_alignStart="@+id/forgotEmailField"
        android:layout_below="@+id/forgotEmailField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:background="@drawable/btn_bg"/>

</RelativeLayout>